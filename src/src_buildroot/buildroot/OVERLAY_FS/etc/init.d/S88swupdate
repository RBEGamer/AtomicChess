#!/bin/sh
#
# atc        Starts the swupdate webserver
#



umask 077

start() {
	
	touch /etc/swupdate/SWUPDATE_WEBSERVER_LOCK
    	/etc/swupdate/run_swupdate_webserver.sh &
	echo "OK"
}
stop() {
	rm -f /etc/swupdate/SWUPDATE_WEBSERVER_LOCK
	killall swupdate
	echo "OK"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?


